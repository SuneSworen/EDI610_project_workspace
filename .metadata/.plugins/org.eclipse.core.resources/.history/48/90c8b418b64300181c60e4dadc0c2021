#ifndef SRC_ASTEROID_H_
#define SRC_ASTEROID_H_


#include <xil_types.h>

#define SMALL 	0
#define MEDIUM	1
#define LARGE	2
#define XLARGE	3

int16_t AsteroidSmall[30] = {20,0,18,8,13,14,6,19,-3,19,-10,17,-17,11,-20,4,-20,-5,-17,-12,-11,-18,-3,-20,-6,-20,13,-15,18,-9,20,0};
int16_t AsteroidMedium[30];
int16_t AsteroidLarge[30];
int16_t AsteroidXLarge[30];

struct Asteroid
{
	int x, y, speed, moveAngle, size, moveX, moveY;

};


void SpawnAsteroid(struct Asteroid *a);
void MoveAsteroid(struct Asteroid *a);
#endif /* SRC_ASTEROID_H_ */
